package com.test;

import java.util.concurrent.BlockingQueue;

import org.json.simple.JSONObject;

class Producer implements Runnable {

	private BlockingQueue<JSONObject> queue;
	private final int TOTAL_MSG = 200;

	Producer(BlockingQueue<JSONObject> queue) {
		this.queue = queue;
	}

	@Override
	public void run() {

		for (int i = 0; i < TOTAL_MSG; i++) {
			try {
				String value = "";
				JSONObject obj = new JSONObject();
				obj.put("message", "Producer producing message");
				obj.put("id", i);
				System.out.print(obj);
				
				System.out.println("Producing element...");
				queue.put(obj);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}

	}
}

public class PhonePeMultithreading {

	public static void main(String arg[]) {

	}

}
