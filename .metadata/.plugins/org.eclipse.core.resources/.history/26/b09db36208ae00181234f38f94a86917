package com.hackerrank;

public class Array02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a[] = {1,2,3,4,5,6,7};
		int d = 2;
		int n = a.length;
		int temp,j, last = n-d+1;
		
		for (int i=0;i<d;i++){
			temp = a[i];
			for(j=i;j<n-d;j+=d){
				a[j]=a[j+d];
			}
			a[last++] = temp;
			for(int k:a)
				System.out.print(k+" ");
			System.out.println();
		}

		//for(int k:a)
		//	System.out.print(k+" ");
	}

}
