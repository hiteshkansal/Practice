package com.hackerrank;

public class Array02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a[] = {1,2,3,4,5,6,7};
		int d = 2;
		int n = a.length;
		int temp,j;
		int bsize=gcd(d, n);
		for (int i=0;i<bsize;i++){
			temp = a[i];
			for(j=i;j<n-bsize;j+=bsize){
				a[j]=a[j+bsize];
			}
			a[j] = temp;
		}

		for(int k:a)
			System.out.print(k+" ");
	}
	
	public static int gcd(int a, int b) 
    {
        if (b == 0)
            return a;
        else
            return gcd(b, a % b);
    }

}
